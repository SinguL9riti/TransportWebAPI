@model IEnumerable<TransportWebAPI.Models.Schedule>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Расписание маршрутов</title>
</head>
<body>
    <h1>Расписание маршрутов</h1>

    <h2>Добавить новое расписание</h2>
    <form id="createScheduleForm" method="post" action="@Url.Action("Create", "Schedule")">
        <label for="routeId">Маршрут:</label>
        <select id="routeId" name="RouteId" required>
            <option value="">Выберите маршрут</option>
            @foreach (var route in ViewBag.Routes)
            {
                <option value="@route.RouteId">@route.Name</option>
            }
        </select>
        <br>
        <label for="stopId">Остановка:</label>
        <select id="stopId" name="StopId" required>
            <option value="">Выберите остановку</option>
            @foreach (var stop in ViewBag.Stops)
            {
                <option value="@stop.StopId">@stop.Name</option>
            }
        </select>
        <br>
        <label for="weekday">День недели:</label>
        <input type="text" id="weekday" name="Weekday" required>
        <br>
        <label for="arrivalTime">Время прибытия:</label>
        <input type="time" id="arrivalTime" name="ArrivalTime" required>
        <br>
        <label for="year">Год:</label>
        <input type="number" id="year" name="Year" required>
        <br>
        <button type="submit">Добавить</button>
    </form>

    <h2>Список расписаний</h2>
    <table border="1" cellpadding="10" cellspacing="0">
        <thead>
            <tr>
                <th>Код расписания</th>
                <th>Код маршрута</th>
                <th>Код остановки</th>
                <th>День недели</th>
                <th>Время прибытия</th>
                <th>Год</th>
                <th>Маршрут</th>
                <th>Остановка</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in Model)
            {
                <tr>
                    <td>@schedule.ScheduleId</td>
                    <td>@schedule.RouteId</td>
                    <td>@schedule.StopId</td>
                    <td>@schedule.Weekday</td>
                    <td>@schedule.ArrivalTime</td>
                    <td>@schedule.Year</td>
                    <td>@schedule.Route.Name</td>
                    <td>@schedule.Stop.Name</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
